{
	"name": "masm-code",
	"displayName": "masm-code",
	"publisher": "kaixa",
	"description": "Integrate Masm syntax highlight and code snippets into VSCode and auto compile in DOSBox",
	"icon": "icons/masm-code.png",
	"version": "1.2.7",
	"license": "MIT",
	"engines": {
		"vscode": "^1.42.0"
	},
	"categories": [
		"Extension Packs"
	],
	"activationEvents": [
		"onCommand:extension.runDOSBox",
		"onCommand:extension.compileInDOSBox",
		"onLanguage:assembly"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.runDOSBox",
				"title": "启动DOSBox"
			},
			{
				"command": "extension.compileInDOSBox",
				"title": "在DOSBox中编译运行"
			},
			{
				"command": "extension.compileInDOSBoxTwoSteps",
				"title": "在DOSBox中编译运行(使用MASM和LINK)"
			}
		],
		"languages": [
			{
				"id": "assembly",
				"aliases": [
					"asm"
				],
				"extensions": [
					".asm"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"snippets": [
			{
				"language": "assembly",
				"path": "./snippets/snippets.json"
			}
		],
		"grammars": [
			{
				"language": "assembly",
				"scopeName": "source.asm",
				"path": "./syntaxes/assembly.tmLanguage.json"
			}
		],
		"configuration": {
			"title": "Masm-code",
			"properties": {
				"masm-code.DOSBox.BoxWidth": {
					"type": "integer",
					"default": 1024,
					"description": "DOSBox窗口的宽度"
				},
				"masm-code.DOSBox.BoxHeight": {
					"type": "integer",
					"default": 768,
					"description": "DOSBox窗口的高度"
				},
				"masm-code.DOSBox.NoConsole": {
					"type": "boolean",
					"default": false,
					"description": "启动DOSBox但是不显示DOSBox的控制台"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "webpack --mode production",
		"webpack": "webpack --mode development",
		"webpack-dev": "webpack --mode development --watch",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.12.35",
		"@types/request": "^2.48.4",
		"@types/vscode": "^1.42.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"@typescript-eslint/parser": "^2.18.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"ts-loader": "^6.2.2",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0",
		"webpack": "^4.42.1",
		"webpack-cli": "^3.3.11"
	},
	"dependencies": {
		"request": "^2.88.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Woodykaixa/masm-code"
	}
}
